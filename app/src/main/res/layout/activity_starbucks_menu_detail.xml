<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuReg.StarbucksMenu_write">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteY="173dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <!-- 카드뷰1: 커스텀 메뉴 간략 정보 카드 => * 리니어로 수정 -->
            <LinearLayout
                android:id="@+id/custom_concise_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <!-- 커스텀 메뉴 대표 이미지 -->
                    <ImageView
                        android:id="@+id/first_item_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/ic_logo_all_icon_button" />

                    <!-- 커스텀 메뉴 간략 정보 텍스트 그룹 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- 커스텀 메뉴 브랜드명 텍스트 -->
                            <TextView
                                android:id="@+id/first_item_brand_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="공차"
                                android:textColor="@color/Active_Text"
                                android:textSize="10sp" />

                            <!-- 커스텀 메뉴 이름 텍스트 -->
                            <TextView
                                android:id="@+id/first_item_name_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1위 커스텀메뉴 명칭"
                                android:textAlignment="viewStart"
                                android:textColor="@color/Active_Text"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <!-- 커스텀 메뉴 가격 텍스트 -->
                            <TextView
                                android:id="@+id/first_item_prise_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="10000₩"
                                android:textColor="@color/Active_Text"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!-- 커스텀 메뉴 좋아요한 인원 텍스트 -->
                        <TextView
                            android:id="@+id/first_item_mn_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="60dp"
                            android:text="nn명 커스텀즈의 찜"
                            android:textColor="@color/Maincolor_Brown2"
                            android:textSize="15sp" />

                        <!-- 커스텀 메뉴 찜 이미지 버튼 -->
                        <ImageButton
                            android:id="@+id/first_item_like_imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:background="#00ff0000"
                            android:src="@drawable/ic_inactive_like_icon_24"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <!-- 커스텀 메뉴 옵션 그룹 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- 커스텀 메뉴 기존 메뉴 제목 -->
                    <TextView
                        android:id="@+id/title_basemenu_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="기존 메뉴"
                        android:textColor="@color/Active_Text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 기존 메뉴 표시 텍스트 -->
                    <TextView
                        android:id="@+id/custom_basemenu_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="기존 메뉴표시되는 텍스트"
                        android:textColor="@color/Active_Text"
                        android:textSize="20sp" />

                    <!-- 구분선2 이미지 -->
                    <ImageView
                        android:id="@+id/divid2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/ic_divide_line" />

                    <!-- 커스텀 메뉴 옵션 제목 -->
                    <TextView
                        android:id="@+id/title_option_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="커스텀 메뉴 옵션"
                        android:textColor="@color/Active_Text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 사이즈 제목 -->
                    <TextView
                        android:id="@+id/title_size_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="사이즈"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 사이즈 라디오 버튼1~3 -->
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- 사이즈 라디오 버튼1 -->
                        <RadioButton
                            android:id="@+id/custom_size1_radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="톨(355ml)"
                            android:textColor="@color/Active_Text" />

                        <!-- 사이즈 라디오 버튼2 -->
                        <RadioButton
                            android:id="@+id/custom_size2_radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="그란데(473ml)"
                            android:textColor="@color/Active_Text" />

                        <!-- 사이즈 라디오 버튼3 -->
                        <RadioButton
                            android:id="@+id/custom_size3_radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text="벤티(591ml)"
                            android:textColor="@color/Active_Text" />

                    </RadioGroup>

                    <!-- 커스텀 메뉴 에스프레소 샷 갯수 제목 -->
                    <TextView
                        android:id="@+id/title_shotnum_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="에스프레소 샷 갯수 (600원 추가)"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 에스프레소 샷 갯수 표시 텍스트 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <!-- 커스텀 메뉴 에스프레소 샷 갯수 표시 텍스트 -->
                        <TextView
                            android:id="@+id/custom_shotnum_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NN"
                            android:textColor="@color/Active_Text"
                            android:textSize="20sp" />

                        <!-- 에스프레소 샷 단위(샷) 설명 텍스트 -->
                        <TextView
                            android:id="@+id/explain_shotnum_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="샷"
                            android:textColor="@color/Active_Text"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- 커스텀 메뉴 시럽 제목 -->
                    <TextView
                        android:id="@+id/title_syrup_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="시럽 (1회당 600원 추가)"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 시럽: 바닐라 시럽 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- 바닐라 시럽 제목 -->
                        <TextView
                            android:id="@+id/title_vanillasyrup_textView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="바닐라 시럽"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 바닐라 시럽 횟수 표시 텍스트 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">

                            <!-- 커스텀 메뉴 바닐라 시럽 횟수 표시 텍스트 -->
                            <TextView
                                android:id="@+id/custom_vanillasyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NN"
                                android:textColor="@color/Active_Text"
                                android:textSize="20sp" />

                            <!-- 바닐라 시럽 단위(회) 설명 텍스트 -->
                            <TextView
                                android:id="@+id/explain_vanillasyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="회"
                                android:textColor="@color/Active_Text"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 커스텀 메뉴 시럽: 헤이즐넛 시럽 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- 헤이즐넛 시럽 제목 -->
                        <TextView
                            android:id="@+id/title_hazelnutsyrup_textView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="헤이즐넛 시럽"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 헤이즐넛 시럽 횟수 표시 텍스트 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">

                            <!-- 커스텀 메뉴 헤이즐넛 시럽 횟수 표시 텍스트 -->
                            <TextView
                                android:id="@+id/custom_hazelnutsyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NN"
                                android:textColor="@color/Active_Text"
                                android:textSize="20sp" />

                            <!-- 헤이즐넛 시럽 단위(회) 설명 텍스트 -->
                            <TextView
                                android:id="@+id/explain_hazelnutsyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="회"
                                android:textColor="@color/Active_Text"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 커스텀 메뉴 시럽: 카라멜 시럽 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- 카라멜 시럽 제목 -->
                        <TextView
                            android:id="@+id/title_caramelsyrup_textView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="카라멜 시럽"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 카라멜 시럽 횟수 표시 텍스트 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">

                            <!-- 커스텀 메뉴 카라멜 시럽 횟수 표시 텍스트 -->
                            <TextView
                                android:id="@+id/custom_caramelsyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NN"
                                android:textColor="@color/Active_Text"
                                android:textSize="20sp" />

                            <!-- 카라멜 시럽 단위(회) 설명 텍스트 -->
                            <TextView
                                android:id="@+id/explain_caramelsyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="회"
                                android:textColor="@color/Active_Text"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>


                    <!-- 커스텀 메뉴 라떼 베이스 제목 -->
                    <TextView
                        android:id="@+id/title_lattebase_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="라떼 베이스"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 라떼 베이스 표시 텍스트 -->
                    <TextView
                        android:id="@+id/custom_lattebase_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="라떼 베이스 표시"
                        android:textColor="@color/Active_Text"
                        android:textSize="20sp" />

                    <!-- 커스텀 메뉴 베이스(물,티) 제목 -->
                    <TextView
                        android:id="@+id/title_base_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="베이스(물,티)"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 베이스(물,티) 시크바 -->
                    <SeekBar
                        android:id="@+id/custom_base_seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="2"
                        android:min="0"
                        android:progress="1"
                        android:progressTint="@color/Maincolor_Brown1" />

                    <!-- 커스텀 메뉴 베이스(물,티) 시크바 값 텍스트-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1">

                        <!-- 베이스(물,티) 시크바 값0 텍스트: 적게 -->
                        <TextView
                            android:id="@+id/explain_base_less_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="적게"
                            android:textAlignment="textStart"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 베이스(물,티) 시크바 값1 텍스트: 보통 -->
                        <TextView
                            android:id="@+id/explain_base_normal_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="보통"
                            android:textAlignment="center"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 베이스(물,티) 시크바 값2 텍스트: 많이 -->
                        <TextView
                            android:id="@+id/explain_base_much_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:text="많이"
                            android:textAlignment="textEnd"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 커스텀 메뉴 얼음 제목 -->
                    <TextView
                        android:id="@+id/title_ice_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="얼음"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 얼음 시크바 -->
                    <SeekBar
                        android:id="@+id/custom_ice_seekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="3"
                        android:min="0"
                        android:progress="2"
                        android:progressTint="@color/Maincolor_Brown1" />

                    <!-- 커스텀 메뉴 얼음 시크바 값 텍스트-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1">

                        <!-- 얼음 시크바 값0 텍스트: 없음 -->
                        <TextView
                            android:id="@+id/explain_ice_no_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="없음"
                            android:textAlignment="textStart"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 얼음 시크바 값1 텍스트: 적게 -->
                        <TextView
                            android:id="@+id/explain_ice_less_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="적게"
                            android:textAlignment="center"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 얼음 시크바 값2 텍스트: 보통 -->
                        <TextView
                            android:id="@+id/explain_ice_normal_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="보통"
                            android:textAlignment="center"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 얼음 시크바 값3 텍스트: 많이 -->
                        <TextView
                            android:id="@+id/explain_ice_much_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:text="많이"
                            android:textAlignment="textEnd"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- 커스텀 메뉴 휘핑 제목 -->
                    <TextView
                        android:id="@+id/title_whipping_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="휘핑(600원 추가)"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 휘핑 라디오 버튼1~3 -->
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- 휘핑 라디오 버튼1 -->
                        <RadioButton
