<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuReg.StarbucksMenu_write">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="16dp">

            <!-- 카드뷰1: 커스텀 메뉴 간략 정보  카드 => * 리니어로 수정 -->
            <LinearLayout
                android:id="@+id/custom_concise_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <!-- 커스텀 메뉴 대표 이미지 -->
                    <ImageView
                        android:id="@+id/custom_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/ic_logo_all_icon_button" />

                    <!-- 커스텀 메뉴 간략 정보 텍스트 그룹 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="bottom">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- 커스텀 메뉴 브랜드명 텍스트 -->
                            <TextView
                                android:id="@+id/first_item_brand_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="이디야"
                                android:textColor="@color/Active_Text"
                                android:textSize="10sp" />

                            <!-- 커스텀 메뉴 이름 텍스트 -->
                            <TextView
                                android:id="@+id/custom_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1위 커스텀메뉴 명칭"
                                android:textAlignment="viewStart"
                                android:textColor="@color/Active_Text"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <!-- 커스텀 메뉴 가격 그룹(가격 텍스트 + ₩ 텍스트) -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="15dp">

                                <!-- 커스텀 메뉴 가격 텍스트 -->
                                <TextView
                                    android:id="@+id/custom_prise"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="custom_prise"
                                    android:textColor="@color/Active_Text"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <!-- 커스텀 메뉴 가격 단위(₩) 텍스트 -->
                                <TextView
                                    android:id="@+id/explain_prise_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="₩"
                                    android:textColor="@color/Active_Text"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- 커스텀 메뉴 좋아요한 인원 텍스트 -->
                        <TextView
                            android:id="@+id/first_item_mn_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text="nn명 커스텀즈의 찜"
                            android:textColor="@color/Maincolor_Brown2"
                            android:textSize="15sp" />

                        <!-- 커스텀 메뉴 찜 이미지 버튼 -->
                        <ImageButton
                            android:id="@+id/first_item_like_imageButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="10dp"
                            android:background="#00ff0000"
                            android:src="@drawable/ic_inactive_like_icon_24"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <!-- 커스텀 메뉴 옵션 그룹 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- 커스텀 메뉴 기존 메뉴 제목 -->
                    <TextView
                        android:id="@+id/title_basemenu_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="기존 메뉴"
                        android:textColor="@color/Active_Text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 기존 메뉴 표시 텍스트 -->
                    <TextView
                        android:id="@+id/custom_basemenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="기존 메뉴표시되는 텍스트"
                        android:textColor="@color/Maincolor_Brown2"
                        android:textSize="20sp" />

                    <!-- 구분선2 이미지 -->
                    <ImageView
                        android:id="@+id/divid2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:srcCompat="@drawable/ic_divide_line" />

                    <!-- 커스텀 메뉴 옵션 제목 -->
                    <TextView
                        android:id="@+id/title_option_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="커스텀 메뉴 옵션"
                        android:textColor="@color/Active_Text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 사이즈 제목 -->
                    <TextView
                        android:id="@+id/title_size_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="사이즈"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 사이즈 표시 텍스트 -->
                    <TextView
                        android:id="@+id/custom_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="사이즈 표시"
                        android:textColor="@color/Maincolor_Brown2"
                        android:textSize="20sp" />

                    <!-- 커스텀 메뉴 에스프레소 샷 갯수 제목 -->
                    <TextView
                        android:id="@+id/title_shotnum_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="에스프레소 샷 갯수 (500원 추가)"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 에스프레소 샷 갯수 표시 텍스트 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <!-- 커스텀 메뉴 에스프레소 샷 갯수 표시 텍스트 -->
                        <TextView
                            android:id="@+id/custom_shotnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NN"
                            android:textColor="@color/Maincolor_Brown2"
                            android:textSize="20sp" />

                        <!-- 에스프레소 샷 단위(샷) 설명 텍스트 -->
                        <TextView
                            android:id="@+id/explain_shotnum_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="샷"
                            android:textColor="@color/Maincolor_Brown2"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <!-- 커스텀 메뉴 펄 토핑 제목 -->
                    <TextView
                        android:id="@+id/title_pearl_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="펄 토핑 (1000원 추가)"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 펄 토핑 표시 텍스트 -->
                    <TextView
                        android:id="@+id/custom_pearl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="펄 토핑 표시"
                        android:textColor="@color/Maincolor_Brown2"
                        android:textSize="20sp" />

                    <!-- 커스텀 메뉴 시럽 제목 -->
                    <TextView
                        android:id="@+id/title_syrup_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="시럽 (1회당 300원 추가)"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 시럽: 헤이즐넛 시럽 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <!-- 헤이즐넛 시럽 제목 -->
                        <TextView
                            android:id="@+id/title_hazelnutsyrup_textView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="헤이즐넛 시럽"
                            android:textColor="@color/Maincolor_Brown2"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 헤이즐넛 시럽 횟수 표시 텍스트 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">

                            <!-- 커스텀 메뉴 헤이즐넛 시럽 횟수 표시 텍스트 -->
                            <TextView
                                android:id="@+id/custom_hazelnutsyrupnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NN"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                            <!-- 헤이즐넛 시럽 단위(회) 설명 텍스트 -->
                            <TextView
                                android:id="@+id/explain_hazelnutsyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="회"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 커스텀 메뉴 시럽: 카라멜 시럽 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">

                        <!-- 카라멜 시럽 제목 -->
                        <TextView
                            android:id="@+id/title_caramelsyrup_textView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="카라멜 시럽"
                            android:textColor="@color/Maincolor_Brown2"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 카라멜 시럽 횟수 표시 텍스트 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">

                            <!-- 커스텀 메뉴 카라멜 시럽 횟수 표시 텍스트 -->
                            <TextView
                                android:id="@+id/custom_caramelsyrupnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NN"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                            <!-- 카라멜 시럽 단위(회) 설명 텍스트 -->
                            <TextView
                                android:id="@+id/explain_caramelsyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="회"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 커스텀 메뉴 시럽: 바닐라 시럽 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="5dp">

                        <!-- 바닐라 시럽 제목 -->
                        <TextView
                            android:id="@+id/title_vanillasyrup_textView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="바닐라 시럽"
                            android:textColor="@color/Maincolor_Brown2"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 바닐라 시럽 횟수 표시 텍스트 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">

                            <!-- 커스텀 메뉴 바닐라 시럽 횟수 표시 텍스트 -->
                            <TextView
                                android:id="@+id/custom_vanillasyrupnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NN"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                            <!-- 바닐라 시럽 단위(회) 설명 텍스트 -->
                            <TextView
                                android:id="@+id/explain_vanillasyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="회"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 커스텀 메뉴 시럽: 아이리쉬 시럽 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="5dp">

                        <!-- 아이리쉬 시럽 제목 -->
                        <TextView
                            android:id="@+id/title_irishsyrup_textView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="아이리쉬 시럽"
                            android:textColor="@color/Maincolor_Brown2"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 아이리쉬 시럽 횟수 표시 텍스트 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">

                            <!-- 커스텀 메뉴 아이리쉬 시럽 횟수 표시 텍스트 -->
                            <TextView
                                android:id="@+id/custom_irishsyrupnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NN"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                            <!-- 아이리쉬 시럽 단위(회) 설명 텍스트 -->
                            <TextView
                                android:id="@+id/explain_irishsyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="회"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 커스텀 메뉴 시럽: 카페 시럽(무료) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="5dp">

                        <!-- 카페 시럽 제목 -->
                        <TextView
                            android:id="@+id/title_cafesyrup_textView"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="카페 시럽(무료)"
                            android:textColor="@color/Maincolor_Brown2"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 카페 시럽 횟수 표시 텍스트 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:orientation="horizontal">

                            <!-- 커스텀 메뉴 카페 시럽 횟수 표시 텍스트 -->
                            <TextView
                                android:id="@+id/custom_cafesyrupnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NN"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                            <!-- 카페 시럽 단위(회) 설명 텍스트 -->
                            <TextView
                                android:id="@+id/explain_cafesyrup_shotnum_textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="회"
                                android:textColor="@color/Maincolor_Brown2"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- 커스텀 메뉴 토핑 소스 제목 -->
                    <TextView
                        android:id="@+id/title_toppingsauce_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="토핑 소스 (500원 추가)"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 토핑 소스 표시 텍스트 -->
                    <TextView
                        android:id="@+id/custom_toppingsauces"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="토핑 소스 표시"
                        android:textColor="@color/Maincolor_Brown2"
                        android:textSize="20sp" />

                    <!-- 커스텀 메뉴 토핑제목 -->
                    <TextView
                        android:id="@+id/title_topping_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="토핑 (500원 추가)"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- 커스텀 메뉴 토핑 표시 텍스트 -->
                    <TextView
                        android:id="@+id/custom_toppings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="펄 토핑 표시"
                        android:textColor="@color/Maincolor_Brown2"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>

            <!-- 카드뷰2: 리뷰 작성 안내 카드 => * 리니어로 수정 -->
            <LinearLayout
                android:id="@+id/explain_review_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:elevation="15dp">

                <!-- 리뷰 작성 안내 카드 내용 그룹 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <!-- 리뷰 설명 텍스트 그룹 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <!-- 커스텀 메뉴 리뷰 제목 텍스트 -->
                        <TextView
                            android:id="@+id/title_review_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="커스텀 메뉴 리뷰"
                            android:textAlignment="viewStart"
                            android:textColor="@color/Active_Text"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 리뷰 설명 텍스트 -->
                        <TextView
                            android:id="@+id/explain_review_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="해당 커스텀 메뉴에 대한 리뷰를 남겨주세요!"
                            android:textColor="@color/Active_Text"
                            android:textSize="10sp" />


                    </LinearLayout>

                    <!-- 리뷰 작성 버튼 그룹 -->
                    <android.widget.Button
                        android:id="@+id/login_button"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/ic_add_complete_button_background"
                        android:backgroundTint="@color/Maincolor_Brown1"
                        android:fontFamily="sans-serif-black"
                        android:text="리뷰 작성하기 >"
                        android:textColor="@color/White_Text"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <!-- 카드뷰3: 커스텀제품 리뷰 카드 => *  리니어로 수정-->
            <LinearLayout
                android:id="@+id/custom_review_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:elevation="15dp"
                android:layout_marginBottom="100dp" >

                <!-- 커스텀제품 리뷰 내용 그룹 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <!-- 커스텀 메뉴 리뷰 작성자 정보 그룹 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <!-- 커스텀 메뉴 리뷰 작성자 프로필 이미지 -->
                        <ImageView
                            android:id="@+id/reviewer_profile_imageView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/reviewer2" />

                        <!-- 커스텀 메뉴 리뷰 작성자 이름 텍스트 -->
                        <TextView
                            android:id="@+id/reviewer_name_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="오리는왈왈"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- 커스텀 메뉴 리뷰 작성날짜 텍스트 -->
                        <TextView
                            android:id="@+id/review_date_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="2022.07.31"
                            android:textColor="@color/Active_Text"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <!-- 커스텀 메뉴 리뷰 내용 텍스트 -->
                    <TextView
                        android:id="@+id/review_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="이디야 토핑이 너무 좋아요ㅠㅠ"
                        android:textColor="@color/Active_Text"
                        android:textSize="15sp" />

                    <!-- 커스텀 메뉴 리뷰 이미지 -->
                    <ImageView
                        android:id="@+id/list_item_imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/ediya_review_picture" />



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>